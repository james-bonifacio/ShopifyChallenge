<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.james.shopifychallenge.MainActivity">
    
    <TextView
        android:id="@+id/tvProvince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders by Province"
        android:textSize="20sp"
        android:onClick="onClick"/>

    <ListView
        android:id="@+id/lvProvince"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvProvince" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders by Year"
        android:layout_below="@+id/lvProvince"
        android:textSize="20sp"
        android:paddingTop="15dp"/>

    <ListView
        android:id="@+id/lvYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvYear" />


</RelativeLayout>
